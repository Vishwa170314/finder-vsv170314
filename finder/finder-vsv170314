class FindLeapYear:
    """It will ask you the year you want then it will calculate if it is leap year or not and print it"""
    def __init__(self):
        year = int(input("Enter the year: "))
        if year % 4 == 0:
            print(f"year {year} is a leap year")
        elif not year % 4 == 0:
            print(f"year {year} is not a leap year")
        else:
            print(f"{year} is not valid")


class FindSum:
    """It will ask you two numbers then it will print out the sum"""
    def __init__(self):
        self.f_no = float(input("Enter your first number: "))
        self.s_no = float(input("Enter your second number: "))
        print(self.f_no + self.s_no)


class FindDifference:
    """It will ask you two numbers then it will print out the difference"""
    def __init__(self):
        self.f_no = float(input("Enter your first number: "))
        self.s_no = float(input("Enter your second number: "))
        print(self.f_no - self.s_no)


class FindProduct:
    """It will ask you two numbers then it will print out the product"""
    def __init__(self):
        self.f_no = float(input("Enter your first number: "))
        self.s_no = float(input("Enter your second number: "))
        print(self.f_no * self.s_no)


class FindQuotient:
    """It will ask you two numbers then it will print out the quotient"""
    def __init__(self):
        self.f_no = float(input("Enter your first number: "))
        self.s_no = float(input("Enter your second number: "))
        print(self.f_no / self.s_no)


class FindDivisibility:
    """It will ask you a number then it will ask what number to check is it divisible by ant it will print is
     it divisible or not"""
    def __init__(self):
        self.number = float(input("Enter the number: "))
        self.div_no = float(input("Is it divisible by: "))
        if self.number % self.div_no == 0:
            print(f"{self.number} is divisible by {self.div_no}")
        elif not self.number % self.div_no == 0:
            print(f"{self.number} is not divisible by {self.div_no}")
        else:
            print(f"{self.number} or/and {self.div_no} is not valid")
